{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-middle with-sidebar">
        <div class="page-section-nano nano">
            <div class="nano-content">
                <div class="page-section">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('security.login_check') }}" method="post">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password"/>

                        {% if target_path is defined %}
                            <input type="hidden" name="_target_path" value="{{ target_path }}"/>
                        {% endif %}

                        <button type="submit">login</button>
                    </form>

                    <hr/>
                    <a href="{{ path('security.recovery') }}">Forgot password?</a>
                    <a href="{{ path('security.register') }}">Register</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}